{
  "name": "jsonpointerx",
  "version": "1.0.12",
  "description": "the x-th jsonpointer (rfc6901) implementation",
  "main": "./main/index.js",
  "module": "./module/index.js",
  "types": "./main/index.d.ts",
  "tags": [
    "javascript",
    "typescript",
    "json pointer",
    "rfc6901"
  ],
  "author": {
    "email": "www.gms@gmx.at",
    "name": "Guenter Sandner"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gms1/jsonpointerx.git"
  },
  "bugs": {
    "url": "https://github.com/gms1/jsonpointerx/issues"
  },
  "homepage": "https://github.com/gms1/jsonpointerx",
  "scripts": {
    "clean": "rimraf dist/*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:umd": "rollup -c rollup.config.lib.umd.js",
    "build": "npm run build:main && npm run build:module && npm run build:umd",
    "rebuild": "npm run clean && npm run build",
    "test:run": "node spec/jasmine-runner.js",
    "test": "npm run build:main && npm run test:run",
    "watch": "tsc -w -p tsconfig.json",
    "coverage:run": "nyc -e .ts -x '**/*.spec.ts' jasmine-ts './src/**/*.spec.ts' --include='./src/**/*.ts' --exclude='./src/**/*.spec.ts'",
    "coverage:report": "nyc report --reporter=text-lcov",
    "coverage:html": "nyc report --reporter=html",
    "coverage:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "typedoc": "typedoc --options typedoc.json --out docs/typedoc/jsonpointerx --exclude '**/*.spec.ts' src/",
    "prepublishOnly": "echo \"ERROR: please use the dist-folder for publishing\" && exit 1",
    "release:build": "npm run clean && npm run build && npm run test:run && npm run _pubprep",
    "release:publish": "npm run typedoc && cd dist && npm --access public publish",
    "_pubprep": "ts-node --project=build/ts/tsconfig.json --cache-directory=tmp/cache/ts-node build/ts/publish-prepare.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/fs-extra": "^5.0.3",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.3.5",
    "coveralls": "^3.0.1",
    "fs-extra": "^6.0.1",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.2",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "typescript": {
    "definition": "./index.d.ts"
  }
}
